@using EMarket.Core.Application.ViewModel.Advertising
@model DetailsAdvertisingViewModel

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container-fluid mt-2 mb-5">
    <div class="row d-flex">
        <div class="col-6">
            <div class="row">
                <div class="col-5 w-auto h-auto">
                                <div class="card">
                <div class="card-body">
                                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
  <div class="carousel-indicators">
      @for(int i=0; i<Model.Gallery.Count; i++)
        {
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i==0?"active":"")" aria-current="true" aria-label="Slide @i"></button>
    
        }
  </div>
  <div class="carousel-inner">
        @for(int i=0; i<Model.Gallery.Count; i++)
        {
        <div class="@(i==0 ?"carousel-item active":"carousel-item")">
        <img src="@Model.Gallery[i].Url" class="d-block w-100" alt="@Model.Gallery[i].Name">
        </div>
        }
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
                </div>
            </div>
                </div>
                <div class="col-12 mt-2">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Description</h2>
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-4 h-50 w-50">
            <div class="card bg-transparent border-0">
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item bg-custom">
                            <h2 class="card-title text-center text-white">@Model.Name</h2>
                        </li>
                        <li class="list-group-item">
                            <h4><i class="fa-solid fa-dollar-sign" style="font-size: 20px;"></i> Price: </h4>
                           <h5 class="text-price">@Model.Price.ToString("C")</h5>
                        </li>
                        <li class="list-group-item">
                            <h4><i class="fa-solid fa-tag" style="font-size:20px;"></i> Category:</h4>
                            <h5 class="text-price">@Model.Category</h5>
                        </li>
                        <li class="list-group-item">
                            <h4><i class="fa-solid fa-clock" style="font-size:20px;"></i> Publication Date: </h4>
                            <h5 class="text-price">@Model.PublicationDate</h5>
                        </li>
                       <li class="list-group-item">
                            <h4><i class="fa-solid fa-user" style="font-size:20px;"></i> Published By: </h4>
                            <h5 class="text-price">@Model.PublishedBy</h5>
                        </li>
                        <li class="list-group-item">
                            <h4><i class="fa-solid fa-envelope" style="font-size:20px;"></i> Email: </h4>
                            <h5 class="text-price">@Model.Email</h5>
                        </li>
                        <li class="list-group-item">
                            <h4><i class="fa-solid fa-phone" style="font-size:20px;"></i> Contact Phone: </h4>
                            <h5 class="text-price">@Model.Phone</h5>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
