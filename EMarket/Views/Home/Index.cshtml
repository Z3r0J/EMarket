@using EMarket.Core.Application.ViewModel.Advertising
@model List<AdvertisingViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-5 mb-3">
    <div class="row">
                <div class="col-3 mb-5">
            <div class="card mt-2 mb-4 shadow shadow-lg">
                    <img src="https://ae01.alicdn.com/kf/H72b88b53375a4d1baac19152e68c8115m/Camiseta-de-Lil-Tjay-para-hombres-y-mujeres-camiseta-informal-de-marca-camisetas-de-rapero-para.jpg_Q90.jpg_.webp" class="card-img-top w-100"/>
                <div class="card-body">
                    <h2 class="card-title">@Model[0].Name</h2>
                    <span class="badge badge-category mb-3">@Model[0].Category</span>
                    <div class="d-flex justify-content-between">
                        <p class="card-text">@Model[0].Description</p>
                        <p class="card-text text-text-currency">DOP$<h2 class="text-price">@Model[0].Price</h2></p>
                    </div>
                    <div class="d-flex justify-content-around">
                        <p class="card-subtitle text-black-50">Published by: @Model[0].User</p>
                        <a asp-action="Details" asp-controller="Advertising" asp-route-id="1" class="btn btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
